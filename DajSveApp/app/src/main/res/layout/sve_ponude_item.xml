<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/ponuda_image"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ponudivacLogo"
                    android:src="@mipmap/ic_launcher"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>


            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/sss"  />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ponuda_cijena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:textIsSelectable="false"
                tools:text="Nova cijena"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
                android:textSize="18sp"
                android:textColor="@color/blaga_tamno_zelena"
                android:fontFamily="serif"
                android:gravity="center"/>

            <TextView
                android:id="@+id/stara_cijena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:textIsSelectable="false"
                tools:text="Redovna cijena"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
                android:textSize="18sp"
                android:textColor="@color/siva"
                android:fontFamily="serif"
                android:gravity="center"/>

            <TextView
                android:id="@+id/popust"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:textIsSelectable="false"
                tools:text="Popust"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
                android:textSize="19sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ponuda_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textIsSelectable="false"
            tools:text="Naziv ponude"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>